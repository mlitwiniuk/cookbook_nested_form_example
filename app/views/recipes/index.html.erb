<div class="w-full">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
  <% end %>
  <% content_for :title, "Recipes" %>
  <div class="flex justify-between items-center py-4">
    <h1 class="font-bold text-4xl">Recipes</h1>
    <%= link_to "New recipe", new_recipe_path, class: "rounded-lg py-3 px-5 bg-blue-600 text-white block font-medium" %>
  </div>
  <table id="recipes" class="w-full">
    <thead>
      <tr>
        <th class="text-left">Name</th>
        <th class="text-right">Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @recipes.each do |recipe| %>
        <tr>
          <td class="text-left"><%= recipe.name %></td>
          <td class="text-right">
            <%= link_to "Show this recipe", recipe, class: "ml-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
